{% extends 'base.html.twig' %}
{% block extraJs %}
    {{ include('feature.html.twig') }}
{% endblock %}
{% block title%} Liste des Recettes{% endblock %}

{% block body %}


{{ form_start(form) }}
<div class="form-row align-items-end" >
<div class="col">
 {{ form_row(form.nom) }}
</div>
 <div class="col">
 <div class="form-group">
 <button type="submit" class="btn btn-success">Rechercher</button>
 </div>
</div>
</div>
{{ form_end(form) }}


 {% if recettes %}
    <table id="recettes" class="table table-striped">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Niveau</th>
          
          <th>Temps de preparation</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for recette in recettes %}
          <tr>
            <td>{{ recette.nom }}</td>
            <td>{{ recette.Niveau }}</td>
            <td>{{ recette.Tempsdepreparation }}</td>

            <td>
               <a href="/Recettes/{{ recette.id }}" class="btn btn-dark">Détails</a>
               <a href="/Recettes/edit/{{ recette.id }}" class="btn btn-dark">Modifier</a>
               <a href="/Recettes/delete/{{ recette.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer cette recette?');">Supprimer</a>
             
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Tapez le nom de la recette que vous souhaitez avoir</p>
  {% endif %} 
  {% endblock %}